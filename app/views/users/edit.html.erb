<%= form_for @user do |f| %>
<p>
  <%= f.label :first_name, "First Name: " %><br>
  <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name, "Last Name: " %><br>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :address, "Address: " %><br>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :major, "Major: " %><br>
    <%= f.text_field :major %>
  </p>
<p>
  <%= f.submit %>
</p>
<% end %>
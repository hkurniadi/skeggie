<% @cururl = request.original_url %> 
<% @curyear = Date.today.year %> <!-- Will be used to check if course is from a past year -->
<% @curmonth = Date.today.month %> <!-- Will determine semester that is in session -->

<% case @curmonth %>
<% when 1,2,3,4 %>
	<% @cursem = 1 %>
<% when 5,6,7,8 %>
	<% @cursem = 2 %>
<% else %>
	<% @cursem = 3 %>
<% end %>

<% @results = 0 %> <!-- Will be used to print out message if there are no results -->

<% if @cururl.split('/').count >=5 %>
  <% @semester = @cururl.split('/')[4].split('%20')[0] %>
	<% case @semester %>
	<% when "Spring" %>
		<% @semi = 1 %>
	<% when "Summer" %>
		<% @semi = 2 %>
	<% else %>
		<% @semi = 3 %>
	<% end %>
  <% @year = @cururl.split('/')[4].split('%20')[1] %>
  <% @department = @cururl.split('/')[5] %>
<% end %>

<% if @cururl.split('/').count >=6 && (@cururl[@cururl.length()-6]=='/' or @cururl[@cururl.length()-3]=='W') %>
  <% @coursenum = @cururl.split('/')[6] %>
  <% @sort = @cururl.split('/')[7] %>
<% end %>

<% if !@department.nil? %>
  <% if @coursenum.nil? or @sort != "1" %> <!-- No Course Number is specified meaning we want all courses for the semester -->
    <% @response = HTTParty.get ("http://www.sfu.ca/bin/wcm/course-outlines?#{@year}/#{@semester}/#{@department}") %>
  <% else %>
    <% @response = HTTParty.get ("http://www.sfu.ca/bin/wcm/course-outlines?#{@year}/#{@semester}/#{@department}/#{@coursenum}") %>
  <% end %>

  <% if @response.kind_of?(Array) %> <!-- Checking if response is valid -->
    <table class='search_results'>
      <% if @coursenum.nil? %> <!-- Course Number isn't specified, all courses from semester appear -->
				<% @response.each do |val| %>
				<tr>
					<td class = 'dep_cid'><%= "#{@department} #{val["text"]}" %></td>
					<td class = 'course_title'><%= val["title"] %></td>
					<td class = 'course_link'><%= link_to("View Sections", "#{@cururl}/#{val["text"]}/1") %></td>
					<%= render partial: "add_past_course", locals: {department: @department, coursenum: val["text"] } %>
					<% @results += 1 %>
        </tr>
        <% end %>
      <% else %>
				<% case @sort %>
				<% when "1" %> 
					<% @response.each do |val| %>
					<tr>
						<td class = 'course_section'><%= "#{@department} " + "#{@coursenum} " + val["text"] %></td>
						<td class = 'course_title'><%= val["title"] %></td>
						<td class = 'course_link'><%= link_to("View", "#{self.request.base_url}/course/#{@cururl.split('/')[4..-2].join("/")}/#{val["text"]}" ) %></td>
						<%= render partial: "add_past_course", locals: {department: @department, coursenum: @coursenum } %>
						<% if @curyear <= @year.to_i && @cursem <= @semi %>
							<%= render partial: "add_current_course", locals: {year: @year, semester: @semester, department: @department, course_num: @coursenum, section: val["text"], type: val["sectionCode"], conflicted: ""} %>
						<% end %>
						<% @results += 1 %>
					</tr>
					<% end %>
				<% when "2" %>
					<% @response.each_with_index do |val, i| %>
						<% break if val["text"] >= @coursenum %>
						<tr>
							<td class = 'dep_cid'><%= "#{@department} #{val["text"]}" %></td>
							<td class = 'course_title'><%= val["title"] %></td>
							<td class = 'course_link'><%= link_to("View Sections", "#{@cururl}#{val["text"]}") %></td>
							<%= render partial: "add_past_course", locals: {department: @department, coursenum: val["text"] } %>
							<% @results += 1 %>
						</tr>
					<% end %>
				<% when "3" %>	
     			<% @response.each do |val| %>
     				<% next if val["text"] <= @coursenum %>
						<tr>
							<td class = 'dep_cid'><%= "#{@department} #{val["text"]}" %></td>
							<td class = 'course_title'><%= val["title"] %></td>
							<td class = 'course_link'><%= link_to("View Sections", "#{@cururl.split('/')[0..-3].join("/")}/#{val["text"]}/1") %></td>
							<%= render partial: "add_past_course", locals: {department: @department, coursenum: val["text"] } %>
							<% @results += 1 %>
						</tr>
					<% end %>
				<% end %>
      <% end %>
    </table>
  <% end %>
	<% if @results == 0 %>
		<p id='no_results'>Sorry, there are no courses matching your query.</p>
	<% end %>
<% end %>

